{
  "manifest_version": 3,
  "name": "Data Movie To Notion",
  "version": "1.0",
  "description": "Captura datos de películas y series de páginas web y envíalos a una tabla en Notion.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
    "https://www.imdb.com/*",
    "https://www.themoviedb.org/*",
    "https://www.filmaffinity.com/ar/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/proto-icon.png",
    "20": "icons/proto-icon.png",
    "24": "icons/proto-icon.png",
    "32": "icons/proto-icon.png",
    "40": "icons/proto-icon.png",
    "48": "icons/proto-icon.png",
    "64": "icons/proto-icon.png",
    "128": "icons/proto-icon.png",
    "256": "icons/proto-icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/proto-icon.png",
      "20": "icons/proto-icon.png",
      "24": "icons/proto-icon.png",
      "32": "icons/proto-icon.png",
      "40": "icons/proto-icon.png",
      "48": "icons/proto-icon.png",
      "64": "icons/proto-icon.png",
      "128": "icons/proto-icon.png",
      "256": "icons/proto-icon.png"
    }
  }
}
